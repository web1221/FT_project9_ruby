<h1>Update <%= @project.title() %></h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title_input">Rename project</label>
  <input id="title_input" name="title_input" type="text" class="form-control">

  <button type="submit" class="btn btn-primary">Update Project</button>

</form>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-primary">Delete Project</button>
</form>

<p><a href="/projects">Return to project list</a></p>
