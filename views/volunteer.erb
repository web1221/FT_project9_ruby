<h2>Project: <%= @volunteer.projects.title %></h2>
<h3>Volunteer: <%= @volunteer.name %> </h3>


<form action="/projects/<%= @volunteer.projects.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name_input">Rename Volunteer</label>
  <input id="name_input" name="name_input" type="text">

  <button type="submit">Update Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.projects.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Volunteer</button>
</form>

<a href="/projects/<%= @volunteer.projects.id %>">Back to <%= @volunteer.projects.title %></a>
