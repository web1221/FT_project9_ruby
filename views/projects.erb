<h1>Add a new project</h1>

<form action="/projects/new" method="post">
<div class="form-group">
  <label for="title_input">Project Title</label>
  <input name="title_input" class="form-control" type="text" required>
</div>
<button type="submit" class="btn btn-primary">Create Project</button>
</form>

<h3><center>Available Projects</center></h3>
<% if @projects.any? %>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/projects/<%= project.id %>"><strong><%= project.title %></strong></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are currently no projects to display.</p>
  <% end %>
